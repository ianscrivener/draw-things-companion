{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "drawthings_companion",
  "version": "0.1.0",
  "identifier": "com.ianscrivener.drawthings_companion",

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DrawThings Companion",
        "width": 1200,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "build": {
    "beforeDevCommand": "cd src && npm run dev",
    "beforeBuildCommand": "cd src && npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../src/app/public"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
