{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:path:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion/**"
        },
        {
          "path": "$HOME/Library/Containers/com.liuliu.draw-things/**"
        },
        {
          "path": "/Volumes/**"
        },
        {
          "path": ".env"
        },
        {
          "path": "../.env"
        },
        {
          "path": "../../.env"
        },
        {
          "path": "../../../.env"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion/**"
        },
        {
          "path": "/Volumes/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion"
        },
        {
          "path": "$HOME/.drawthings_companion/**"
        },
        {
          "path": "/Volumes/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion"
        },
        {
          "path": "$HOME/.drawthings_companion/**"
        },
        {
          "path": "$HOME/Library/Containers/com.liuliu.draw-things/**"
        },
        {
          "path": "/Volumes/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion/**"
        },
        {
          "path": "$HOME/Library/Containers/com.liuliu.draw-things/**"
        },
        {
          "path": "/Volumes/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-stat",
      "allow": [
        {
          "path": "$HOME/.drawthings_companion/**"
        },
        {
          "path": "$HOME/Library/Containers/com.liuliu.draw-things/**"
        },
        {
          "path": "/Volumes/**"
        }
      ]
    },
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "wget",
          "cmd": "wget",
          "args": true
        }
      ]
    },
    "opener:default",
    "dialog:default",
    "http:default"
  ]
}
