{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "draw-things-companion",
    "version": "0.1.0",
    "identifier": "com.ianscrivener.draw-things-companion",
    "app": {
        "withGlobalTauri": true,
        "windows": [{
            "title": "draw-things-companion",
            "width": 1200,
            "height": 850
        }],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },

    "build": {
        "beforeDevCommand": "cd src-svelte && npm run dev",
        "beforeBuildCommand": "cd src-svelte && npm run build",
        "devUrl": "http://localhost:5173",
        "frontendDist": "../src-svelte/dist"
    }


}