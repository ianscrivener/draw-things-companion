{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "drawthings_companion",
  "version": "0.1.0",
  "identifier": "com.ianscrivener.drawthings_companion",

  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "DrawThings Companion",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "build": {
    "beforeDevCommand": "cd src && npm run dev",
    "beforeBuildCommand": "cd src && npm run build",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../src/app/public"
  },
  "plugins": {
    "shell": {
      "scope": [
        {
          "name": "bash",
          "cmd": "bash",
          "args": true
        },
        {
          "name": "jq",
          "cmd": "jq",
          "args": true
        },
        {
          "name": "mv",
          "cmd": "mv",
          "args": true
        },
        {
          "name": "ls",
          "cmd": "ls",
          "args": true
        },
        {
          "name": "cp",
          "cmd": "cp",
          "args": true
        },
        {
          "name": "mkdir",
          "cmd": "mkdir",
          "args": true
        },
        {
          "name": "xz",
          "cmd": "xz",
          "args": true
        },
        {
          "name": "zip",
          "cmd": "zip",
          "args": true
        },
        {
          "name": "rm",
          "cmd": "rm",
          "args": true
        },
        {
          "name": "openssl",
          "cmd": "openssl",
          "args": true
        },
        {
          "name": "shasum",
          "cmd": "shasum",
          "args": true
        }
      ]
    }
  }
}
